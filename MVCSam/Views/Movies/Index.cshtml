@model IEnumerable<MVCSam.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (!Model.Any())
{
    <p>映画資料なし</p>
}
else
{

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>       
                </tr>
                
            }
        </tbody>
    </table>
}

